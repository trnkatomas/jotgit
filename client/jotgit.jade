template(name="home")
  div.container
    div.row
      div.col-md-11
        h1 jotgit
        h2 files
        +files
      div.col-md-1
        img#logo(src='/images/logos.png')

template(name="files")
  ul
    each files
      li
        a(href="{{pathFor 'fileEdit' path}}") {{path}}
  a.createFile(href='#') Create new file

template(name="fileEdit")
  div.container
    div.row
      div.col-md-11
        h1 jotgit
        a.commit(href='#') save project
      div.col-md-1
        img#logo(src='/images/logos.png')
    div.row
      div.col-md-4
        h2 files
        +files
    div.row
      div.col-md-12
        span Auto-save
        div.btn-group.btn-toggle
          button.btn.btn-xs(id="timer-on-button") On
          button.btn.btn-xs.btn-primary.active(id="timer-off-button") Off
        div(id="timer-settings")
          span every
          input(id='autosave-time', type="text")
          | minutes

    div.row
      div.col-md-8
        h3(id="file-name") {{fileInfo._id}}
        form(id="rename-form")
          h3
            input(id='new-file-name', type="text")
            input(type="submit", value="Rename", class='btn btn-xs')
    div.row
      div.col-md-12
        textarea#editor
